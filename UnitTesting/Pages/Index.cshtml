@page
@model List<UnitTesting.Models.Product>
<!DOCTYPE html>

<html>
<head>
    <meta mane="viewport" content="width=device-width"/>
    <title>UnitTesting</title>
</head>
<body class="panel-body">
<h3>Products</h3>
<table class="table table-bordered table-striped">
    <thead>
    <tr><td>Name</td><td>Price</td></tr>
    </thead>
    <tbody >
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@($"{p.Price:C2}")</td>
        </tr>
    }
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-action="AddProduct">
        Add New Product!
    </a>
</div>
</body>
</html>